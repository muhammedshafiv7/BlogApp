<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog App - User Dashboard</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <!-- Custom CSS -->
  <style>
    body {
      background-color: #f9f9f9;
    }

    .navbar {
      background-color: #333;
    }

    .navbar-brand {
      font-size: 24px;
    }

    .nav-link {
      color: #fff;
      font-size: 18px;
    }

    .nav-link:hover {
      color: #eaeaea;
    }

    .btn-danger {
      background-color: #d9534f;
      border-color: #d9534f;
    }

    .btn-danger:hover {
      background-color: #c9302c;
      border-color: #ac2925;
    }

    .card {
      border: 1px solid #ccc;
      border-radius: 8px;
      background-color: #fff;
      transition: box-shadow 0.3s ease;
    }

    .card:hover {
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
      color: #333;
      font-size: 24px;
      font-weight: bold;
    }

    .card-text {
      color: #555;
      font-size: 16px;
    }

    .card-date {
      color: #888;
      font-size: 14px;
    }

    .icons a {
      color: #777;
      font-size: 20px;
      transition: color 0.3s ease;
    }

    .icons a:hover {
      color: #333;
    }

    .footer {
      background-color: #333;
      color: #fff;
      padding: 10px 0;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark">
      <div class="container">
        <a class="navbar-brand" href="#">Blog App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/user">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/managepost">Manage Post</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/user/createpost">Create Post</a>
            </li>
          </ul>
        </div>
        <a href="/manager/Logout" class="btn btn-danger">Logout</a>
      </div>
    </nav>
  </header>
  <main class="container mt-4">
    <div class="row">
      <% if (typeof res !== 'undefined' && res.length > 0){ %>
        <% res.forEach((ress) => { %>
          <!-- Example Post Card -->
          
          <div class="col-md-6 mb-4">
            <div class="card">  
              <div class="card-body d-flex justify-content-between flex-column">
                <h3 class="card-title"><%= ress.title %></h3>
                <span class="card-date">Posted by <%= ress.userName %></span>
                <span class="card-date">Posted on <%= ress.date %></span>

                <p class="card-text"><%= ress.description %></p>
                <div>
                  <% if (ress.approved === 1) { %>
                    <button class="btn btn-success disabled">Approved</button>
                  <% } else if (ress.approved === -1) { %>
                    <button class="btn btn-danger disabled">Declined</button>
                  <% } else { %>
                    <button class="btn btn-warning disabled">Pending</button>
                  <% } %>
                </div>

                
               

                <div class="ms-auto">
                  <a href="/user/editPost/<%= ress._id %>" class="btn btn-primary">Edit</a>
                  <a href="/user/deletePost/<%= ress._id %>" class="btn btn-danger">Delete</a>
                </div>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <!-- Show some message if there are no posts -->
      <% } %>
    </div>
  </main>

  <footer class="footer text-center py-3 fixed-bottom">
    <!-- Footer content goes here -->
    <p>&copy; 2023 Blog App. All rights reserved.</p>
  </footer>

  <!-- Include Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Include Bootstrap Icons library -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.js"></script>
  <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
</body>
</html>
