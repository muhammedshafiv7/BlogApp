<!DOCTYPE html>
<html>
<head>
  <title>Blog App</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      margin: 0;
      font-family: Arial, sans-serif;
    }

    .navbar {
      background-color: #a3a2a2;
    }

    .navbar a {
      color: #101010;
    }

    .navbar a:hover {
      background-color: #ddd;
      color: black;
    }

    .navbar .dropdown-menu {
      display: none;
    }

    .navbar .dropdown:hover .dropdown-menu {
      display: block;
    }

    /* Reduce the width of the table and center it */
    .container {
      max-width: 800px; /* Set the maximum width of the container */
      margin: 0 auto; /* Center the container horizontally */
    }

    /* ... (rest of the CSS styles) ... */

    /* Reduce the width of the "Edit" and "Delete" columns */
    .usertable th.edit-col,
    .usertable td.edit-col,
    .usertable th.delete-col,
    .usertable td.delete-col {
      width: 10%;
    }
  </style>
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#">Blog App</a>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/admin">User</a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="topicManagerDropdown" role="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Topic Manager
          </a>
          <div class="dropdown-menu" aria-labelledby="topicManagerDropdown">
            <a class="dropdown-item" href="/admin/addManager">Add Manager</a>
            <a class="dropdown-item" href="/admin/viewManager">View Manager</a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="categoriesDropdown" role="button"
            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </a>
          <div class="dropdown-menu" aria-labelledby="categoriesDropdown">
            <a class="dropdown-item" href="/admin/addCategory">Add Categories</a>
            <a class="dropdown-item" href="/admin/viewCategory">View Categories</a>
          </div>
        </li>
      </ul>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="loginDropdown" role="button" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Login
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="loginDropdown">
              <a class="dropdown-item" href="/user/login">User</a>
              <a class="dropdown-item" href="/admin/logout">Logout Admin</a>
              <a class="dropdown-item" href="#">Topic Manager</a>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </header>

  <section>
    <div class="container mt-4">
      <!-- Add header for Categories -->
      <h2>Category.</h2>
      <div class="table-responsive">
        <table class="table table-bordered usertable">
          <thead class="thead-light">
            <tr>
              <th>Topic</th>
              <th class="edit-col">Edit</th>
              <th class="delete-col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% topic.forEach((category) => { %>
              <tr>
                <td><%= category.topic %></td>
                <td class="edit-col"><a href="/admin/editCategory/<%= category._id %>"><button class="btn btn-success">Edit</button></a></td>
                <td class="delete-col"><a href="/admin/deleteCategory/<%= category._id %>"><button class="btn btn-danger">Delete</button></a></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </section>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
